{% extends 'layouts/base.twig' %}
{% block content %}
    <div class="row">
        <div class="col">
            <h1>{{ title }}</h1>
        </div>
    </div>
    <div class="row">
        {% for post in posts %}
            <div class="col">
                {% include ['leaves/'~post.type.slug~'-teaser.twig', 'leaves/teaser.twig'] %}
            </div>
        {% else %}
            <div class="col">
                {% include 'leaves/nothing.twig' %}
            </div>
        {% endfor %}
    </div>
    {% if posts %}
        <div class="row">
            <div class="col">
                {% include 'leaves/pagination.twig' with {posts: posts} only %}
            </div>
        </div>
    {% endif %}
{% endblock %}